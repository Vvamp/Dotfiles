# Applications
## Launch Rofimoji 
super + e 
	rofimoji

# wm independent hotkeys
#
 Show Shortcuts
super + F1
    bash /home/vvamp/.config/sxhkd/keybindings.sh

# terminal emulator
super + Return
	termite -d /home/vvamp

# Launch Drun
super + d
	dmenu_run

# Launch SSH
super + space
	internet

# Window Tabber
alt + Tab
	rofi -show window

# Lock Screen
super + l
	slock	
# Power Menu 
super + p
	power

# Google something(duckduckgo )
super + g 
	websearch

# Screenshot
Print 
    scrot $HOME/Pictures/Screenshots/%Y-%m-%d.png

# Screenshot - Select Area
control + Print 
    sleep 0.2; scrot -s -f $HOME/Pictures/Screenshots/%Y-%m-%d.png

# Screenshot - Current Window
alt + Print 
    scrot -u $HOME/Pictures/Screenshots/%Y-%m-%d.png


control + F12 
    amixer set Master 5%+ && aplay /home/vvamp/Videos/beep.wav -d 1  

control + F11 
    amixer set Master 5%- && aplay /home/vvamp/Videos/beep.wav -d 1

control + F10
    amixer set Master toggle && aplay /home/vvamp/Videos/beep.wav -d 1


#
# bspwm hotkeys
#


# Quit/Restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill Window
super + {_,shift + }q
	bspc node -{c,k}


# Set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}


# Focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local


# Focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# Focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# Contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}



